{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Configuration file schema",
    "type": "object",
    "properties": {
        "databaseFileName": {
            "description": "Path to SQLite database",
            "type": "string"
        },
        "httpListenIP": {
            "description": "HTTP listen IP",
            "type": "string"
        },
        "httpListenPort": {
            "description": "HTTP listen port",
            "type": "integer"
        },
        "httpServerPath": {
            "description": "HTTP Server Path",
            "type": "string"
        },
        "recipientEmails": {
            "description": "Recipient emails",
            "type": [
                "string",
                "array"
            ]
        },
        "fromEmail": {
            "description": "Sender's email",
            "type": "string"
        },
        "subject": {
            "description": "Email subject",
            "type": "string"
        },
        "maxHttpRequestSize": {
            "description": "Maximum HTTP Request Size",
            "type": "string"
        },
        "logLevel": {
            "description": "Log level",
            "type": "string"
        },
        "redirectFieldName": {
            "description": "Page to be redirected after the form is submitted.",
            "type": "string"
        },
        "reCaptchaSecret": {
            "description": "Recaptcha Site Key",
            "type": "string"
        },
        "requireReCaptchaResponse": {
            "description": "Determines if g-recaptcha-response should be checked in POST",
            "type": "boolean"
        },
        "smtpPort": {
            "description": "SMTP Port",
            "type": "integer"
        },
        "smtpHost": {
            "description": "SMTP Host",
            "type": "string"
        }
    },
    "required": [
        "recipientEmails"
    ]
}