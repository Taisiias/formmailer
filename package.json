{
  "name": "formmailer",
  "version": "0.4.0",
  "description": "HTTP server that emails data submitted on static website forms.",
  "main": "index.js",
  "scripts": {
    "test": "tsc && tslint --project tsconfig.json --type-check ./src/**/*",
    "build": "tsc",
    "start": "tsc && node ./build/src/index.js",
    "live": "tsc && concurrently --kill-others --names \"FM,SMTP,HTTP\" -c \"blue.bold,green.bold,grey.bold\" \"yarn dev-formmailer\" \"yarn dev-smtp-server\" \"yarn dev-static-http\"",
    "live-support": "concurrently --kill-others --names \"SMTP,HTTP\" -c \"green.bold,grey.bold\" \"yarn dev-smtp-server\" \"yarn dev-static-http\"",
    "dev-formmailer": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts --config ./test/config.test.json",
    "dev-static-http": "http-server ./test -o",
    "dev-smtp-server": "node ./build/src/run-smtp.js",
    "prepare": "tsc --outDir ./dist --sourceMap false"
  },
  "bin": "./dist/formmailer.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Taisiias/formmailer.git"
  },
  "keywords": [
    "forms",
    "mail",
    "http",
    "post",
    "static"
  ],
  "author": "Taisiia Sobchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Taisiias/formmailer/issues"
  },
  "homepage": "https://github.com/Taisiias/formmailer#readme",
  "dependencies": {
    "@types/he": "^0.5.29",
    "@types/mustache": "^0.8.29",
    "@types/node": "^8.0.30",
    "@types/node-static": "^0.7.0",
    "@types/nodemailer": "^3.1.3",
    "@types/request": "^2.0.3",
    "@types/request-promise": "^4.1.37",
    "@types/smtp-server": "^1.15.2",
    "@types/sqlite3": "^3.1.0",
    "@types/winston": "^2.3.4",
    "@types/yargs": "^8.0.2",
    "email-validator": "^1.1.1",
    "he": "^1.1.1",
    "mustache": "^2.3.0",
    "node-static": "^0.7.10",
    "nodemailer": "^4.0.1",
    "querystring": "^0.2.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "sqlite3": "^3.1.9",
    "typescript": "^2.4.2",
    "url": "^0.11.0",
    "winston": "^2.3.1",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "http-server": "^0.10.0",
    "nodemon": "^1.11.0",
    "smtp-server": "^3.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0"
  }
}
